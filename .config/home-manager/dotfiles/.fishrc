# Set up `vimrc` integration
fish_vi_key_bindings

# set color variables for gruvbox theme
set -l foreground ebdbb2
set -l selection 504945
set -l comment 928374
set -l red cc241d
set -l orange fe8019
set -l yellow d79921
set -l green 98971a
set -l purple b16286
set -l blue 458588
set -l background 282828

# syntax highlighting colors
set -g fish_color_normal $foreground
set -g fish_color_command $blue
set -g fish_color_param $purple
set -g fish_color_redirection $foreground
set -g fish_color_comment $comment
set -g fish_color_error $red
set -g fish_color_escape $yellow
set -g fish_color_operator $green
set -g fish_color_end $orange
set -g fish_color_quote $yellow
set -g fish_color_autosuggestion $comment
set -g fish_color_valid_path --underline

# completion colors
set -g fish_pager_color_completion $foreground
set -g fish_pager_color_description $comment
set -g fish_pager_color_prefix $blue
set -g fish_pager_color_progress $blue

# prompt colors
set -g fish_color_cwd $yellow
set -g fish_color_user $orange
set -g fish_color_host $blue

# Set terminal colors
set fish_color_search_match --background=$selection
